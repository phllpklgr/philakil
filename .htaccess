# mod_rewrite init
RewriteEngine on

# Does not apply to existing directories, meaning that if the folder exists on the server then don't change anything and don't run the Rule!
RewriteCond %{REQUEST_FILENAME} !-d

# Check for file directory with .html extension
RewriteCond %{REQUEST_FILENAME}\.html -f 

# Depicting page with .html extension
RewriteRule ^blog?$ ./pages/blog.html
RewriteRule ^contact?$ ./pages/contact.html
